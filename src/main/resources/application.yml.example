# Exemplo de configuração. Não inclua credenciais reais neste arquivo.
server:
  servlet:
    context-path: /
  port: 8080
spring:
  jackson:
    default-property-inclusion: non_null
  application:
    name: PManager
  datasource:
    url: jdbc:mysql://localhost:3306/pmanagerdb
    driverClassName: com.mysql.cj.jdbc.Driver
    username: root
    password: <your_db_password_here>
  jpa:
    show-sql: true
    hibernate:
      ddl-auto: update
    properties:
      hibernate:
        dialect: org.hibernate.dialect.MySQL8Dialect
  data:
    mongodb:
      host: localhost
      port: 27017
      database: pmanagerdb
  app:
   general:
    pageSize: 3
   security:
    masterApiKey: thekey
    expirationDays: 2


